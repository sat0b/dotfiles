	name = Junichi Sato

[filter "lfs"]
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[core]
    editor = vim
	autocrlf = input
[blame]
	date = short
[rebase]
	autosquash = true

[ghq]
	root=~/Dropbox/ghq
[push]
	autoSetupRemote = true

